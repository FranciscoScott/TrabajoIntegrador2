<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./Partials/Head') %> 

<body>
	<!-- Header -->
	<%- include('./Partials/headerLogueado') %> 
	<!-- /Header -->

	<!-- product add -->
	<div class="container products-wrapper">
		<div class="row">

			<div class="form-background">
<% if (locals.error){ %> 
<p> <%= error %> </p>
<% }else{ %> 
			<div class="col-12">
				<h2 class="products-title">Edit artworks</h2>
			</div>

			<!-- form -->
			<h2 class="col-14"> 
				<form method="post" enctype="multipart/form-data" action="/artworks/<%= product.id %>/edit"> 

					<div class="AddProduct"> 
						<label for="name" class="form-label">Product Name</label>
						<input type="text" class="form-control" id="name" name="name" value="<%= product.modelo%>">   
					</div>

					<div class="AddProduct"> 
						<label for="description" class="form-label">Description </label>
						<input type="text" class="form-control" id="description" name="description" value="<%= product.descripcion%>" placeholder="Make sure your description is as representative as possible...">   
					</div>

					<div class="AddProduct"> 
						<label for="image" class="form-label">Add Image</label>
						<input type="file" class="form-control" name="image" id="image" value="<%= product.imagen%>">
					</div>

					<input type="hidden" class="form-control" id="date" name="date" value="<%= product.userId%>" >
					
		
					<button type="submit" class="btn btn primary"> Update artwork </button>
				</form>
			</h2>
			<!-- form -->
		<% } %> 
			</div>
			
		</div>
	</div>
	<!-- product add -->

	<!-- footer -->
	<%-include('./partials/Footer.ejs')%>
	<!-- footer -->