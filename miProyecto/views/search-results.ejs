<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./Partials/Head') %> 
<body>
	<!-- Header -->
	<%- include('./Partials/Header') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for ( let i=0 ; i < producto.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
								<figure class="product-box_image">
									<a href="/product/<%=producto[i].id %> ">
									<img src=/images/products/<%= producto[i].imagen %> alt="Modelo de zapatilla">
								</figure>
							</a>
								<article class="product-box_data">
									<h2> <%= producto[i].modelo %> </h2>
									<p> <%= producto[i].color%> </p>
									<p> <%= producto[i].descripcion%> </p>
									
								</article>
						</section>
					</div>
					<% } %>


	<!-- footer -->
	<%- include('./Partials/Footer') %> 
	<!-- /footer -->

</body>

</html>